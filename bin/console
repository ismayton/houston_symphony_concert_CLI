#!/usr/bin/env ruby

require "bundler/setup"
require "houston_symphony_concert_CLI"
require_relative "../config/environment"
require "pry"
require "irb"


puts "Welcome to the Program! Wait momentarily for the Concert Schedule to populate."

concert_url = 'https://houstonsymphony.org/tickets/concerts/'
HoustonSymphonyConcertCLI::CLI.first_four_concerts(concert_url)

puts "Please select a concert date for more details."
input = gets.to_i

HoustonSymphonyConcertCLI::CLI.display_full_details(input)
